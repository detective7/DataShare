<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.ys.datashare.view_subs.TabAnewwork">

    <TextView
        android:id="@+id/nwtv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:padding="8dp"
        android:text="新建作业"
        android:textColor="@color/ziTi"
        android:textSize="20dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/nwtv1"
        android:layout_margin="8dp"
        android:background="@color/qianZiTi" />

    <TextView
        android:id="@+id/nwtv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nwtv1"
        android:layout_marginTop="16dp"
        android:padding="8dp"
        android:text="发送班级:"
        android:textColor="@color/ziTi"
        android:textSize="18dp" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/nwtv2"
        android:layout_alignBottom="@+id/nwtv2"
        android:layout_alignTop="@+id/nwtv2" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/nwtv2"
        android:layout_margin="8dp"
        android:background="@color/qianZiTi" />

    <TextView
        android:id="@+id/nwtv3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/nwtv2"
        android:layout_marginTop="16dp"
        android:padding="8dp"
        android:text="作业标题:"
        android:textColor="@color/ziTi"
        android:textSize="18dp" />
    <EditText
        android:id="@+id/work_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#445aabbb"
        android:padding="8dp"
        android:layout_marginRight="18dp"
        android:textColor="@color/ziTi"
        android:hint="少于25汉字"
        android:textColorHint="@color/ziTi"
        android:layout_toRightOf="@id/nwtv3"
        android:layout_alignBottom="@+id/nwtv3"
        android:layout_alignTop="@+id/nwtv3"
        android:textSize="18dp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/nwtv3"
        android:layout_margin="8dp"
        android:background="@color/qianZiTi" />

    <TextView
        android:id="@+id/nwtv4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/nwtv3"
        android:layout_marginTop="16dp"
        android:padding="8dp"
        android:text="作业内容:"
        android:textColor="@color/ziTi"
        android:textSize="18dp" />
    <EditText
        android:id="@+id/work_content"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:background="#00FFFFFF"
        android:padding="8dp"
        android:layout_marginRight="18dp"
        android:textColor="@color/ziTi"
        android:hint="少于300汉字"
        android:minLines="6"
        android:gravity="top"
        android:textColorHint="@color/ziTi"
        android:layout_toRightOf="@id/nwtv4"
        android:layout_alignTop="@+id/nwtv4"
        android:textSize="18dp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/work_content"
        android:layout_margin="8dp"
        android:background="@color/qianZiTi"
        android:id="@+id/view" />

    <TextView
        android:id="@+id/nwtv5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/work_content"
        android:layout_marginTop="16dp"
        android:padding="8dp"
        android:text="作业材料:"
        android:textColor="@color/ziTi"
        android:textSize="18dp" />
    <TextView
        android:id="@+id/work_material"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#445aabbb"
        android:padding="8dp"
        android:layout_marginRight="18dp"
        android:textColor="@color/ziTi"
        android:text="上传资料"
        android:textColorHint="@color/ziTi"
        android:layout_toRightOf="@id/nwtv5"
        android:layout_alignBottom="@+id/nwtv5"
        android:layout_alignTop="@+id/nwtv5"
        android:textSize="18dp" />

    <Button
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:text="上传"
        android:id="@+id/button"
        android:layout_marginTop="1dp"
        android:padding="0dp"
        android:layout_below="@+id/work_material"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
