<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backg_gs_null"
    tools:context="com.example.ys.stu.activity.HomeworkActivitty">

    <LinearLayout
        android:id="@+id/HWCaiDan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/caiDan"
        android:gravity="center_vertical"
        android:minHeight="40dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/HWBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:text="&lt;"
            android:textColor="@color/ziTi"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="作业详细"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/ziTi"
            android:textSize="18dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/HWXiangXi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/loginyuanjiao"
        android:minHeight="110dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/hwxx_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#00FFFFFF"
            android:inputType="number"
            android:padding="12dp"
            android:text="作业标题："
            android:textColor="@color/ziTi"
            android:textColorHint="@color/ziTi"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/hwxx_class"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#00FFFFFF"
            android:padding="12dp"
            android:text="发送班级："
            android:textColor="@color/ziTi"
            android:textColorHint="@color/ziTi"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/hwxx_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#00FFFFFF"
            android:lines="5"
            android:padding="12dp"
            android:text="作业内容："
            android:textColor="@color/ziTi"
            android:textColorHint="@color/ziTi"
            android:textSize="16sp" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <TextView
            android:id="@+id/hwxx_m"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#00FFFFFF"
            android:paddingTop="12dp"
            android:paddingLeft="12dp"
            android:text="包含文件："
            android:textColor="@color/ziTi"
            android:textColorHint="@color/ziTi"
            android:textSize="16sp" />

            <TextView
                android:id="@+id/hwxx_material"
                android:layout_below="@+id/hwxx_m"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:background="#00FFFFFF"
                android:padding="10dp"
                android:text="文件名"
                android:textColor="@color/ziTi"
                android:textColorHint="@color/ziTi"
                android:textSize="16sp" />

            <Button
                android:id="@+id/hw_download"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="8dp"
                android:text="下载材料" />
        </RelativeLayout>

        <TextView
            android:id="@+id/hwxx_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#00FFFFFF"
            android:gravity="right"
            android:padding="10dp"
            android:text="发布时间"
            android:textColor="@color/ziTi"
            android:textColorHint="@color/ziTi"
            android:textSize="18dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/hwxx_zuoye"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/loginyuanjiao"
        android:layout_below="@id/HWXiangXi"
        android:padding="12dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:text="选将要提交的作业"
        android:textColor="@color/ziTi"
        android:textColorHint="@color/ziTi"
        android:textSize="16sp" />



    <Button
        android:id="@+id/hw_tijiao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="提交作业"
        android:layout_below="@id/hwxx_zuoye"
        android:layout_centerHorizontal="true" />

