<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backg_gs_null"
    tools:context="com.example.ys.stu.activity.DataActivity">
    <LinearLayout
        android:id="@+id/DataCaiDan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/caiDan"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:minHeight="40dp">
        <TextView
            android:id="@+id/dataBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:text="&lt;"
            android:textColor="@color/ziTi"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="资料详细"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/ziTi"
            android:textSize="18dp" />
        </LinearLayout>
    <LinearLayout
        android:id="@+id/DataXiangXi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="120dp"
        android:background="@drawable/loginyuanjiao"
        android:orientation="vertical">
        <TextView
            android:id="@+id/dataxx_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#00FFFFFF"
            android:padding="20dp"
            android:textColor="@color/ziTi"
            android:textColorHint="@color/ziTi"
            android:textSize="18dp" />
        <TextView
            android:id="@+id/dataxx_author"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#00FFFFFF"
            android:padding="20dp"
            android:textColor="@color/ziTi"
            android:textColorHint="@color/ziTi"
            android:textSize="18dp"/>
        <TextView
            android:id="@+id/dataxx_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#00FFFFFF"
            android:padding="20dp"
            android:textColor="@color/ziTi"
            android:textColorHint="@color/ziTi"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/dataxx_material"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#00FFFFFF"
            android:padding="20dp"
            android:textColor="@color/ziTi"
            android:textColorHint="@color/ziTi"
            android:textSize="18dp"/>

        <TextView
            android:id="@+id/dataxx_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#00FFFFFF"
            android:padding="20dp"
            android:textColor="@color/ziTi"
            android:textColorHint="@color/ziTi"
            android:gravity="right"
            android:textSize="18dp"/>
        </LinearLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="下载"
        android:id="@+id/data_download"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/DataXiangXi"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
